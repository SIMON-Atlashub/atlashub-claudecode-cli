{
  "$schema": "https://atlashub.ch/schemas/claude-gitflow-config.json",
  "version": "1.0.0",
  "repository": {
    "name": "@atlashub/claude-tools",
    "folder": "atlashub-claudecode-cli-develop",
    "type": "nodejs",
    "language": "typescript",
    "description": "Claude Code automation toolkit - GitFlow, APEX, EF Core migrations, prompts and more",
    "remoteUrl": "https://github.com/SIMON-Atlashub/atlashub-claudecode-cli.git"
  },
  "git": {
    "branches": {
      "main": "main",
      "develop": "develop",
      "featurePrefix": "feature/",
      "releasePrefix": "release/",
      "hotfixPrefix": "hotfix/"
    },
    "remote": "origin",
    "mergeStrategy": "--no-ff",
    "tagPrefix": "v",
    "protectedBranches": ["main", "develop"],
    "requireLinearHistory": false
  },
  "versioning": {
    "strategy": "SemVer",
    "source": "package.json",
    "sourceFile": "package.json",
    "autoIncrement": {
      "feature": "minor",
      "hotfix": "patch",
      "release": "manual"
    }
  },
  "efcore": {
    "enabled": false,
    "note": "Ce projet Node.js/TypeScript contient des outils pour g√©rer EF Core dans d'autres projets .NET",
    "autoDetect": false,
    "contexts": [],
    "scripts": {
      "generateOnRelease": true,
      "generateOnHotfix": true,
      "idempotent": true,
      "outputPath": "./scripts/migrations",
      "namingPattern": "{type}_{version}_{timestamp}.sql"
    },
    "validation": {
      "validateBeforeCommit": true,
      "validateBeforeMerge": true,
      "checkModelSnapshotConflicts": true,
      "requireBuildSuccess": true,
      "warnOnPendingMigrations": true
    },
    "backup": {
      "enabled": true,
      "beforeRebase": true,
      "beforeMerge": true,
      "retentionDays": 7
    },
    "naming": {
      "migrationPrefix": "",
      "hotfixPrefix": "Hotfix_",
      "timestampFormat": "yyyyMMddHHmmss"
    }
  },
  "workflow": {
    "requireConfirmation": true,
    "autoDeleteBranch": false,
    "createCheckpoints": true,
    "verboseLogging": false,
    "interactiveMode": true,
    "commitConventions": {
      "enabled": true,
      "migration": "db(migrations): ",
      "feature": "feat: ",
      "fix": "fix: ",
      "release": "release: ",
      "hotfix": "hotfix: ",
      "chore": "chore: "
    },
    "hooks": {
      "prePlan": null,
      "postPlan": null,
      "preExec": null,
      "postExec": null,
      "preCommit": null,
      "postCommit": null
    }
  },
  "ui": {
    "colors": true,
    "showProgress": true,
    "compactMode": false,
    "language": "fr"
  }
}
