{
  "name": "@atlashub/claude-tools",
  "version": "1.4.0",
  "description": "Claude Code automation toolkit - GitFlow, APEX, EF Core migrations, prompts and more",
  "author": {
    "name": "David Truninger",
    "email": "david@atlashub.ch",
    "url": "https://atlashub.ch"
  },
  "license": "UNLICENSED",
  "private": false,
  "type": "commonjs",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "claude-tools": "./dist/index.js",
    "ct": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates",
    "config",
    ".documentation"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atlashub/claude-tools.git"
  },
  "keywords": [
    "claude",
    "claude-code",
    "atlashub",
    "claude-tools",
    "gitflow",
    "apex",
    "efcore",
    "entity-framework",
    "migrations",
    "cli",
    "automation",
    "anthropic",
    "dotnet",
    "prompts"
  ],
  "scripts": {
    "dev": "tsup --watch",
    "build": "npx tsup",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write src/**/*.ts",
    "prepublishOnly": "npm run build",
    "test": "node --test",
    "link": "npm run build && npm link",
    "install:local": "npm run build && node dist/index.js install --local --force --skip-license",
    "install:global": "npm run build && node dist/index.js install --force --skip-license",
    "status:local": "node dist/index.js status --local --verbose",
    "status:global": "node dist/index.js status --verbose"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "cli-table3": "^0.6.3",
    "commander": "^12.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.12",
    "ora": "^8.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.18.0",
    "@typescript-eslint/parser": "^6.18.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
